{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Attach to simulation during runtime. This is useful for debugging extensions.
        // For more information, visit: https://docs.omniverse.nvidia.com/isaacsim/latest/advanced_tutorials/tutorial_advanced_python_debugging.html#attaching-the-debugger-to-a-running-app
        {
            "name": "Python: Attach (windows-x86_64/linux-x86_64)",
            "type": "python",
            "request": "attach",
            "port": 3000,
            "host": "localhost"
        },
        // For standalone script execution
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        {
            "name": "Python: Train Environment",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Template-Isaac-Velocity-Rough-Anymal-D-v0",
                "--num_envs",
                "16",
                "--headless"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        // custom env debuggers
        {
            "name": "Python: TRAIN Anymal Box Stair",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-BoxStairs-Anymal-D-v0",
                "--num_envs",
                "4",
                "--run_name",
                "anymal_box_debug",
                // "--headless"
                // "--resume",
                // "RESUME",
                // "--load_run",
                // "jump_4_box_N_step",
                // "--checkpoint",
                // "model_3000.pt",
                "--video",
                "--video_length",
                "1000",
                "--video_interval",
                "1000",
                "env.rewards.new_height.weight=0.23"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        {
            "name": "Python: TRAIN Anymal LL Step",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-BoxStep-Anymal-D-v0",
                "--num_envs",
                "1",
                "--run_name",
                "anymal_box_debug",
                // "--headless"
                "--resume",
                "RESUME",
                "--load_run",
                "anymal_d_box_climb_ppo_v2",
                // "--checkpoint",
                // "model_3000.pt",
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        {
            "name": "Python: TRAIN Jump Up",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Jump-Boxes-v0",
                "--num_envs",
                "2",
                "--run_name",
                "stair_debug",
                // "--headless"
                // "--resume",
                // "RESUME",
                // "--load_run",
                // "jump_4_box_N_step",
                // "--checkpoint",
                // "model_3000.pt",
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        {
            "name": "Python: TRAIN RigidRobot",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Games-RigidRobot-Simple-D-v0",
                "--num_envs",
                "16",
                // "--headless"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        {
            "name": "Python: TRAIN Recurrent",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Games-RigidRobot-Recurrent-D-v0",
                "--num_envs",
                "16",
                // "--headless"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        // --------------------------------
        {
            "name": "Python: Play Environment",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Template-Isaac-Velocity-Flat-Anymal-D-Play-v0",
                "--num_envs",
                "32"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/play.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        // For script execution inside a Docker
        {
            "name": "Docker: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}"
            }
        },
        {
            "name": "Docker: Train Environment",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Template-Isaac-Velocity-Flat-Anymal-D-v0",
                "--num_envs",
                "4096",
                "--headless"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}"
            }
        },
        {
            "name": "Docker: Play Environment",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Template-Isaac-Velocity-Flat-Anymal-D-Play-v0",
                "--num_envs",
                "32"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/play.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}"
            }
        }
    ]
}